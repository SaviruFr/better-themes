{
  "name": "better-themes",
  "version": "1.0.0",
  "author": "SaviruFr",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsdown",
    "format": "pnpm biome format --write .",
    "format:check": "pnpm biome format .",
    "lint": "pnpm biome lint .",
    "lint:fix": "pnpm biome check --write .",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=main",
    "release": "pnpm build && changeset publish"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./rsc": {
      "types": "./dist/rsc/index.d.ts",
      "import": "./dist/rsc/index.js",
      "require": "./dist/rsc/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SaviruFr/better-themes.git"
  },
  "bugs": {
    "url": "https://github.com/SaviruFr/better-themes/issues"
  },
  "description": "A theme provider for React",
  "files": [
    "dist"
  ],
  "homepage": "https://better-themes.netlify.app",
  "keywords": [
    "react",
    "react-themes",
    "dark-mode",
    "light-mode",
    "theme-provider",
    "ssr",
    "nextjs",
    "remix",
    "vite"
  ],
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "tsdown": "^0.18.4"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  }
}
